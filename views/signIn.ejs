<%- include('./partials/header.ejs') %>
<div class="container">
  <div class="card mb4">
    <div class="card-body sign-in-body">
      <form action="sign_in" method="POST" class="sign-in-form">
        <div class="form-group">
          <label class="username-heading" for="username">Username</label>
          <input
            type="username"
            name="username"
            class="form-control"
            id="username"
            placeholder="eg. Madam Welminster"
          />
        </div>
        <button
          type="submit"
          class="btn btn-outline-secondary btn-lg sign-in-btn"
        >
          Sign In
        </button>
      </form>
      <form action="sign_out" method="POST" class="sign-in-form">
        <button
          type="submit"
          class="btn btn-outline-secondary btn-lg sign-in-btn"
        >
          Sign Out
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
